pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'demowebapp'
        DOCKER_IMAGE_TAG = 'latest'
        PORT = '8088'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/VigneshGnanavel/demowebapp.git'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    bat 'mvn clean install'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} ."
                }
            }
        }
        
        stage('Run Docker Container') {
            steps {
                script {
                    bat "docker run -d -p ${PORT}:${PORT} --name mydemowebapp ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}"
                }
            }
        }
    }
}
